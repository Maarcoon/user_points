<h1><%= I18n.t('users.list') %></h1>

<table>
  <thead>
    <tr>
      <th><%= User.human_attribute_name(:name) %></th>
      <th><%= User.human_attribute_name(:total_points) %></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.total_points %></td>
        <td><%= link_to I18n.t('defaults.show'), user %></td>
      </tr>
    <% end %>
  </tbody>
</table>
